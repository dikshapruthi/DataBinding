<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:bind="http://schemas.android.com/apk/res-auto">
    <data>
        <import type="com.diksha.databindingdemoexample.util.MyStringUtils"/>
        <variable
            name="profileData"
            type="com.diksha.databindingdemoexample.model.Profile" />
    </data>
    <!-- For each xml layout file we marked with <layout></layout> tags,
     data binding library generates a binding class. -->
    <androidx.appcompat.widget.LinearLayoutCompat
        android:background="@color/black"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:gravity="center"
            android:text="Data Binding Demo"
            android:textColor="@color/teal_700"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:text="1.Show data using Product class"
            android:layout_width="wrap_content"
            android:textColor="@color/white"
            android:layout_margin="16dp"
            android:textSize="18sp"
            android:layout_height="wrap_content"/>
      <androidx.appcompat.widget.LinearLayoutCompat
          android:layout_width="match_parent"
          android:layout_height="wrap_content">
          <androidx.appcompat.widget.AppCompatTextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="ID:"
              android:layout_weight="1"
              android:textColor="@color/teal_700"
              android:textSize="24sp"
              android:gravity="center"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="A100"
            android:layout_weight="1"
            android:text="@{profileData.id}"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:layout_gravity="start"/>
      </androidx.appcompat.widget.LinearLayoutCompat>
         <androidx.appcompat.widget.LinearLayoutCompat
          android:layout_width="match_parent"
          android:layout_height="wrap_content">
          <androidx.appcompat.widget.AppCompatTextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="Name:"
              android:layout_weight="1"
              android:textColor="@color/teal_700"
              android:textSize="24sp"
              android:gravity="center"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Alex"
            android:layout_weight="1"
            android:text="@{profileData.name}"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:layout_gravity="start"/>
         </androidx.appcompat.widget.LinearLayoutCompat>
         <androidx.appcompat.widget.LinearLayoutCompat
          android:layout_width="match_parent"
          android:layout_height="wrap_content">
          <androidx.appcompat.widget.AppCompatTextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="Email:"
              android:layout_weight="1"
              android:textColor="@color/teal_700"
              android:textSize="24sp"
              android:gravity="center"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            tools:text="alex@yahoo.in"
            android:text="@{profileData.email}"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:layout_gravity="start"/>
         </androidx.appcompat.widget.LinearLayoutCompat>
        <androidx.appcompat.widget.AppCompatTextView
            android:text="2. Capitalized email using string util class"
            android:layout_width="wrap_content"
            android:textColor="@color/white"
            android:layout_marginTop="24dp"
            android:textSize="18sp"
            android:layout_height="wrap_content"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:text="@{MyStringUtils.capitalize(profileData.name)}"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:textColor="@color/purple_200"
            android:layout_height="wrap_content"/>
    </androidx.appcompat.widget.LinearLayoutCompat>
</layout>